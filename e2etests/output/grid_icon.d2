classes: {
  2x2: {
    grid-rows: 2
    grid-columns: 2
  }
}

grid w/ container + icon: {
  class: 2x2

  a
  b: {
    b child

    icon: https://icons.terrastruct.com/dev%2Fgithub.svg
  }
  c
  d
}

grid + icon: {
  class: 2x2

  icon: https://icons.terrastruct.com/dev%2Fgithub.svg

  a
  b
  c
  d
}

grid + icon w/ container: {
  class: 2x2

  icon: https://icons.terrastruct.com/dev%2Fgithub.svg

  a
  b: {
    b child
  }
  c
  d
}

no label grid w/ container + icon: "" {
  class: 2x2

  a
  b: {
    b child

    icon: https://icons.terrastruct.com/dev%2Fgithub.svg
  }
  c
  d
}

no label grid + icon: "" {
  class: 2x2

  icon: https://icons.terrastruct.com/dev%2Fgithub.svg

  a
  b
  c
  d
}
